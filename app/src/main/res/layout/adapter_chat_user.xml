<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    android:layout_margin="@dimen/_5sdp"
    android:background="@color/white"

    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ivProfilePicPrivate"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            app:civ_border_width="4dp"
            android:padding="@dimen/_2sdp"
            app:civ_border_color="#e5e7e9"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adapter_chat_user_usernametv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/Chatting"
                    android:textSize="@dimen/_18sdp" />

                <CheckBox
                    android:id="@+id/checkbox_adapter_chat_user"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:gravity="center"
                    android:focusableInTouchMode="false"
                    android:text="" />

            </LinearLayout>

            <TextView
                android:id="@+id/adapter_chat_user_last_msg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:singleLine="true"
                android:maxLines="1"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
