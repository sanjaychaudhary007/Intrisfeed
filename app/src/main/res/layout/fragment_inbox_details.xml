<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle_InboxDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:text="Title"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:orientation="horizontal"
            android:weightSum="13">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="@dimen/_5sdp"
                android:text="From"
                android:textColor="@color/nliveo_black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/tvFrom_InboxDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:background="@color/white"
                android:padding="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/nliveo_black"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:orientation="horizontal"
            android:weightSum="13">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="@dimen/_5sdp"
                android:text="Link"
                android:textColor="@color/nliveo_black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/tvLink_InboxDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:background="@color/white"
                android:padding="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/nliveo_black"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:text="Image"
                android:textColor="@color/nliveo_black"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/tvImage_InboxDetails"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/default_img"
                android:text="Image"
                android:textColor="@color/nliveo_black"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:text="Video"
                android:textColor="@color/nliveo_black"
                android:textSize="@dimen/_14sdp" />

            <VideoView
                android:id="@+id/tvVideo_InboxDetails"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                android:text="Video"
                android:textColor="@color/nliveo_black"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:text="Description"
            android:textColor="@color/nliveo_black"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/tvDesc_InboxDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@color/white"
            android:padding="@dimen/_10sdp"
            android:text="Description"
            android:textColor="@color/nliveo_black"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/tvBackInboxDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/bgcolor"
            android:text="BACK"
            android:layout_marginTop="@dimen/_16sdp"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_16sdp"
            android:gravity="center"
            android:textAllCaps="true"
            android:background="@color/colorAccent"/>
    </LinearLayout>


</ScrollView>