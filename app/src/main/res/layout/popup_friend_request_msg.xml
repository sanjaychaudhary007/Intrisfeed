<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bgcolor"
    android:padding="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/nliveo_black"
        android:text="Short Message"/>
    <EditText
        android:id="@+id/etRequest_msg_BrowseAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:maxLength="150"
        android:hint="Enter Short Invitation Message Here"
        android:minLines="4"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/edittext_shadow"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel_BrowseAdapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@color/colorAccent"
            android:textColor="@color/bgcolor"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvSend_BrowseAdapter"
            android:layout_width="0dp"
            android:background="@color/colorAccent"
            android:layout_margin="@dimen/_2sdp"
            android:layout_height="wrap_content"
            android:textColor="@color/bgcolor"
            android:textSize="@dimen/_14sdp"
            android:padding="@dimen/_5sdp"
            android:text="Send Invitation"
            android:gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>