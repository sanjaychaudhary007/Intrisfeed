<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    android:layout_margin="@dimen/_5sdp"
    android:background="@color/sender_chat_bg"

    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ivProfilePicGroup"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            app:civ_border_width="4dp"
            app:civ_border_color="#FFFFFF"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_group_profile" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adapter_chat_group_usernametv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_18sdp" />

                <!--<LinearLayout-->
                    <!--android:id="@+id/llAddFavorite"-->
                    <!--android:layout_width="@dimen/_55sdp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:orientation="vertical">-->

                    <!--<ImageView-->
                        <!--android:id="@+id/ivAddFav"-->
                        <!--android:layout_width="@dimen/_35sdp"-->
                        <!--android:layout_height="@dimen/_35sdp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:src="@drawable/ic_not_favourite" />-->

                <!--</LinearLayout>-->


            </LinearLayout>

            <TextView
                android:id="@+id/adapter_chat_group_timetv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:gravity="right|bottom"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
