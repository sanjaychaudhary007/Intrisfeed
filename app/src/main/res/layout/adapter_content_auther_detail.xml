<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_height="match_parent"
    android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"

            android:layout_height="@dimen/_30sdp">


                <RelativeLayout
                    android:id="@+id/adapter_content_auther_detail_category"
                    android:layout_weight="1"
                    android:padding="@dimen/_5sdp"
                    android:background="#dcdcdc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">


                <TextView
                    android:id="@+id/adpter_content_auther_detail_category"
                    android:layout_width="match_parent"
                    android:text="@string/category"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_height="match_parent" />


                </RelativeLayout>



                <LinearLayout
                    android:layout_weight="1"

                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="@dimen/_30sdp">


                        <RelativeLayout
                            android:id="@+id/adapter_content_auther_detail_rv_title"
                            android:background="#d3d3d3"
                            android:padding="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">


                                <TextView
                                    android:id="@+id/adpter_content_auther_detail_tital"
                                    android:layout_width="match_parent"
                                    android:text="@string/category"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:layout_height="match_parent" />
                        </RelativeLayout>

                </LinearLayout>

        </LinearLayout> </LinearLayout>