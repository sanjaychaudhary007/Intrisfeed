<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llReceiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/bubble1"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/tvreceivedMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text=""
            android:gravity="right"
            android:textColor="@color/nliveo_black"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:id="@+id/adapter_received_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="@dimen/_5sdp"
            android:text="date time"
            android:textColor="@color/graylight"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/bubble2"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/tvSendMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="@dimen/_10sdp"
            android:text=""
            android:textColor="@color/nliveo_black"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:id="@+id/adapter_send_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="date time"
            android:textColor="@color/graylight"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/llIVReceiver"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlSenderImg"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            >

            <ImageView
                android:id="@+id/adpter_iv_image_sender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:scaleType="centerCrop"
                android:layout_margin="@dimen/_5sdp"
                 />
            <TextView
                android:id="@+id/adapter_send_Imgtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:background="#80000000"
                android:text="date time"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlReceiverImg"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/adpter_iv_image_recived"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:scaleType="centerCrop"
                android:layout_margin="@dimen/_5sdp"

                />
            <TextView
                android:id="@+id/adapter_receive_Imgtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:background="#80000000"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="date time"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <!--<ImageView-->
        <!--android:src="@drawable/ic_edit"-->
        <!--android:padding="@dimen/_40sdp"-->
        <!--android:id="@+id/adp_iv_download_icon"-->
        <!--android:visibility="gone"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->

    </RelativeLayout>
</LinearLayout>