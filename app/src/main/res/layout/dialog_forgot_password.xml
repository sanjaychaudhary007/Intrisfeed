<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvTitleForgotpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Forgot Password"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        android:padding="@dimen/_15sdp"
        android:background="@color/colorAccent"/>
    <EditText
        android:id="@+id/etEmail_ForgotpasswordActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_shadow"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_15sdp"
        android:hint="Please Enter Email Address"
        android:padding="@dimen/_10sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvCancel_ForgotpasswordActivity"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                android:padding="@dimen/_10sdp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="@string/cancel"/>
            <Space
                android:layout_width="2dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tvSubmit_ForgotpasswordActivity"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                android:padding="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:gravity="center"
                android:text="@string/submit"/>
        </LinearLayout>
</LinearLayout>